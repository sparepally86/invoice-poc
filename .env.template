# Copy this file to `.env` and fill in values for local development.
# Backend will auto-load this (via python-dotenv) if present.
# Do NOT commit your `.env` with real secrets.

############################################
# Core database
############################################
MONGODB_URI=
# Optional if your URI path does not include a DB name
MONGODB_DB=invoice_poc

############################################
# LLM provider selection
############################################
# noop (safe default), openai, local
LLM_PROVIDER=noop
LLM_MODEL=gpt-4o

############################################
# Vector store selection
############################################
# inmemory (default), pinecone, weaviate
VECTOR_PROVIDER=inmemory

############################################
# OpenAI (optional if LLM_PROVIDER=openai or for embeddings in scripts)
############################################
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1

############################################
# Pinecone (optional if VECTOR_PROVIDER=pinecone)
############################################
PINECONE_API_KEY=
# Preferred for backend: PINECONE_ENVIRONMENT; the setup script accepts either
PINECONE_ENVIRONMENT=
# Legacy/compat for older scripts (optional)
PINECONE_ENV=
PINECONE_INDEX_NAME=invoice-poc

############################################
# Weaviate (optional if VECTOR_PROVIDER=weaviate)
############################################
WEAVIATE_URL=
WEAVIATE_API_KEY=

############################################
# Local LLM (optional if LLM_PROVIDER=local)
############################################
LOCAL_LLM_URL=
LOCAL_LLM_MODEL=llama2

############################################
# Telemetry & rate limiter
############################################
TELEMETRY_WRITE=true
LLM_RATE_LIMIT_PER_MINUTE=60
LLM_RATE_LIMIT_CAPACITY=60

############################################
# Deployment env
############################################
DEPLOY_ENV=development

############################################
# Frontend (Vite) API base (for documentation only)
# Note: Vite reads env files from the frontend/ directory. Create frontend/.env.local with this key.
############################################
VITE_API_BASE=http://127.0.0.1:8000/api/v1

############################################
# Optional: point backend to a different env file name
############################################
# ENV_FILE=.env
